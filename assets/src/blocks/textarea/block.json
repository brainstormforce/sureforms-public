{
	"name": "sureforms/textarea",
	"title": "Textarea",
	"description": "Displays a form text textarea field. This is saved with the order as additional metadata.",
	"category": "sureforms",
	"keywords": ["textarea", "input", "custom", "field"],
    "textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"required": {
			"type": "boolean"
		},
		"value": {
			"type": "string",
			"default": ""
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"disabled": {
			"type": "boolean",
			"default": false
		},
		"size": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Textarea"
		},
		"help": {
			"type": "string"
		},
		"inputmode": {
			"type": "string"
		},
		"max": {
			"type": ["string", "number"]
		},
		"maxlength": {
			"type": "number"
		},
		"name": {
			"type": "string",
			"default": "textarea"
		}
	}
}
