{
	"name": "sureforms/submit",
	"title": "Submit Button",
	"description": "Display a submit button.",
	"category": "sureforms",
	"keywords": [ "submit", "button" ],
	"textdomain": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"supports": {
		"reusable": false,
		"html": false,
		"multiple": false
	},
	"attributes": {
		"text": {
			"type": "string",
			"default": "Submit"
		},
		"showTotal": {
			"type": "boolean",
			"default": false
		},
		"showIcon": {
			"type": "boolean",
			"default": true
		},
		"full": {
			"type": "boolean",
			"default": false
		},
		"size": {
			"type": "string",
			"default": "large"
		},
		"buttonAlignment": {
			"type": "string"
		}
	}
}
