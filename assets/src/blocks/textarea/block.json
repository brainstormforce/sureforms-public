{
	"name": "sureforms/textarea",
	"title": "Textarea",
	"description": "Displays a SureForm Textarea Field",
	"category": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"keywords": [ "textarea", "input", "custom", "field" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"id": {
			"type": "string",
			"default": ""
		},
		"defaultValue": {
			"type": "string"
		},
		"required": {
			"type": "boolean"
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Textarea"
		},
		"textAreaHelpText": {
			"type": "string",
			"default": ""
		},
		"maxLength": {
			"type": "number",
			"default": 1000
		},
		"rows": {
			"type": "number",
			"default": 5
		},
		"cols": {
			"type": "number",
			"default": 3
		},
		"errorMsg": {
			"type": "string",
			"default": "This field is required."
		},
		"formId": {
			"type": "number",
			"default": ""
		}
	}
}
