{
	"name": "sureforms/upload",
	"title": "Upload Field",
	"description": "Displays a SureForm Upload Field",
	"category": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"keywords": [ "upload", "field" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"id": {
			"type": "string",
			"default": ""
		},
		"required": {
			"type": "boolean"
		},
		"label": {
			"type": "string",
			"default": "Upload"
		},
		"fileSizeLimit": {
			"default": 10,
			"type": "number"
		},
		"allowedFormats": {
			"type": "array",
			"default": [
				{ "value": "jpg", "label": "jpg" },
				{ "value": "jpeg", "label": "jpeg" },
				{ "value": "gif", "label": "gif" },
				{ "value": "png", "label": "png" },
				{ "value": "pdf", "label": "pdf" }
			]
		},
		"customFormats": {
			"type": "array",
			"default": []
		},
		"help": {
			"type": "string",
			"default": ""
		},
		"errorMsg": {
			"type": "string",
			"default": "This field is required."
		},
		"formId": {
			"type": "number",
			"default": ""
		}
	}
}
