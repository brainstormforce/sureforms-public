{
	"apiVersion": 2,
	"name": "sureforms/checkbox",
	"title": "Checkbox",
	"description": "Display a checkbox input",
	"category": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"keywords": [ "checkbox", "toggle", "checkout", "engine" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"id": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Checkbox"
		},
		"labelUrl": {
			"type": "string",
			"default": ""
		},
		"required": {
			"type": "boolean"
		},
		"checked": {
			"type": "boolean",
			"default": false
		},
		"checkboxHelpText": {
			"type": "string",
			"default": ""
		},
		"errorMsg": {
			"type": "string",
			"default": "This field is required."
		}
	}
}
