{
	"name": "sureforms/textarea",
	"title": "Textarea",
	"description": "Displays a form text textarea field. This is saved with the order as additional metadata.",
	"category": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"keywords": [ "textarea", "input", "custom", "field" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"required": {
			"type": "boolean"
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Textarea"
		},
		"textAreaHelpText": {
			"type": "string"
		},
		"maxlength": {
			"type": "number",
			"default": 5
		}
	}
}
