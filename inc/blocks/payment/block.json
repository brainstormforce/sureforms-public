{
	"name": "srfm/payment",
	"title": "Payment",
	"description": "Displays a SureForms Payment Field with Stripe integration",
	"category": "sureforms",
	"keywords": [ "payment", "stripe", "money", "charge", "billing" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false,
		"multiple": false
	},
	"example": {
		"attributes": {
			"preview": true
		}
	},
	"attributes": {
		"preview": {
			"type": "boolean",
			"default": false
		},
		"block_id": {
			"type": "string"
		},
		"required": {
			"type": "boolean",
			"default": true
		},
		"fieldWidth": {
			"type": "number",
			"default": 100
		},
		"label": {
			"type": "string",
			"default": "Payment Block"
		},
		"help": {
			"type": "string",
			"default": ""
		},
		"errorMsg": {
			"type": "string",
			"default": ""
		},
		"formId": {
			"type": "number",
			"default": ""
		},
		"isConditionalLogic": {
			"type": "boolean",
			"default": false
		},
		"slug": {
			"type": "string",
			"default": ""
		},
		"paymentType": {
			"type": "string",
			"default": "one-time"
		},
		"subscriptionPlan": {
			"type": "object",
			"default": {
				"name": "Subscription Plan",
				"interval": "month",
				"billingCycles": 2
			}
		},
		"customerNameField": {
			"type": "string",
			"default": ""
		},
		"customerEmailField": {
			"type": "string",
			"default": ""
		},
		"amountType": {
			"type": "string",
			"default": "fixed"
		},
		"fixedAmount": {
			"type": "number",
			"default": 10
		},
		"amountLabel": {
			"type": "string",
			"default": "Enter Amount"
		}
	}
}