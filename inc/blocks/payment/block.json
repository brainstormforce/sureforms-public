{
	"name": "srfm/payment",
	"title": "Payment",
	"description": "Displays a SureForms Payment Field with Stripe integration",
	"category": "sureforms",
	"keywords": [ "payment", "stripe", "money", "charge", "billing" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"example": {
		"attributes": {
			"preview": true
		}
	},
	"attributes": {
		"preview": {
			"type": "boolean",
			"default": false
		},
		"block_id": {
			"type": "string"
		},
		"currency": {
			"type": "string",
			"default": "USD"
		},
		"description": {
			"type": "string",
			"default": "Payment"
		},
		"required": {
			"type": "boolean",
			"default": true
		},
		"fieldWidth": {
			"type": "number",
			"default": 100
		},
		"label": {
			"type": "string",
			"default": "Payment Details"
		},
		"help": {
			"type": "string",
			"default": ""
		},
		"errorMsg": {
			"type": "string",
			"default": ""
		},
		"formId": {
			"type": "number",
			"default": ""
		},
		"isConditionalLogic": {
			"type": "boolean",
			"default": false
		},
		"slug": {
			"type": "string",
			"default": ""
		},
		"paymentItems": {
			"type": "array",
			"default": []
		},
		"paymentType": {
			"type": "string",
			"default": "one-time"
		},
		"subscriptionPlans": {
			"type": "array",
			"default": [
				{
					"name": "Subscription Plan",
					"subscription_amount": 9.99,
					"billing_interval": "month",
					"bill_times": 0,
					"has_trial_days": false,
					"trial_days": 0,
					"has_signup_fee": false,
					"signup_fee": 0,
					"is_default": true,
					"plan_features": [],
					"user_input": false,
					"user_input_default_value": "",
					"user_input_min_value": 0,
					"user_input_label": ""
				}
			]
		}
	}
}