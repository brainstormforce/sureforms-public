{
	"name": "sureforms/dropdown",
	"title": "Dropdown",
	"description": "Displays a SureForm Dropdown Field",
	"category": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"keywords": [ "select", "dropdown", "options", "field" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"block_id": {
			"type": "string"
		},
		"required": {
			"type": "boolean"
		},
		"options": {
			"default": [ "Option 1", "Option 2" ],
			"type": "array"
		},
		"label": {
			"default": "Dropdown",
			"type": "string"
		},
		"help": {
			"type": "string",
			"default": ""
		},
		"errorMsg": {
			"type": "string",
			"default": "This field is required."
		},
		"formId": {
			"type": "number",
			"default": ""
		},
		"placeholder": {
			"type": "string",
			"default": "Select Option"
		}
	}
}
