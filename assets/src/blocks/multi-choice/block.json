{
	"apiVersion": 2,
	"name": "sureforms/multi-choice",
	"title": "Multiple Choice",
	"description": "Display a multiple choice field. This is saved with the order as additional metadata.",
	"category": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"keywords": [ "multi-choice", "quiz", "multi", "sureforms" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"id": {
			"type": "string",
			"default": ""
		},
		"required": {
			"type": "boolean"
		},
		"singleSelection": {
			"type": "boolean"
		},
		"options": {
			"default": [],
			"type": "array"
		},
		"label": {
			"default": "Select",
			"type": "string",
			"selector": "input"
		},
		"help": {
			"type": "string"
		},
		"style": {
			"type": "string",
			"default": "buttons"
		},
		"errorMsg": {
			"type": "string",
			"default": "This field is required."
		}
	}
}
