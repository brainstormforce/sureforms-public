{
	"name": "sureforms/number",
	"title": "Number Field",
	"description": "Displays a form number input field. This is saved with the order as additional metadata.",
	"category": "sureforms",
	"ancestor": [ "sureforms/form" ],
	"keywords": [ "number", "input", "custom", "field" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"id": {
			"type": "string",
			"default": ""
		},
		"defaultValue": {
			"type": "number"
		},
		"minValue": {
			"type": "number"
		},
		"maxValue": {
			"type": "number"
		},
		"required": {
			"type": "boolean",
			"default": false
		},
		"errorMsg": {
			"type": "string",
			"default": "This field is required."
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Number"
		},
		"help": {
			"type": "string"
		},
		"formatType": {
			"type": "string",
			"default": "none"
		}
	}
}
