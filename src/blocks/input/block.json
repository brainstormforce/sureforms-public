{
	"name": "sureforms/input",
	"title": "Text Field",
	"description": "Displays a SureForm Text Field",
	"category": "sureforms",
	"keywords": [ "text", "input", "custom", "field" ],
	"textdomain": "sureforms",
	"supports": {
		"reusable": false,
		"html": false
	},
	"example": {
		"attributes": {
			"preview": true
		}
	},
	"attributes": {
		"preview": {
			"type": "boolean",
			"default": false
		},
		"block_id": {
			"type": "string"
		},
		"defaultValue": {
			"type": "string",
			"default": ""
		},
		"required": {
			"type": "boolean",
			"default": false
		},
		"isUnique": {
			"type": "boolean",
			"default": false
		},
		"duplicateMsg": {
			"type": "string",
			"default": "Value needs to be unique."
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"fieldWidth": {
			"type": "number",
			"default": 100
		},
		"label": {
			"type": "string",
			"default": "Text Field"
		},
		"help": {
			"type": "string",
			"default": ""
		},
		"errorMsg": {
			"type": "string",
			"default": "This field is required."
		},
		"textLength": {
			"type": "number",
			"default": 30
		},
		"formId": {
			"type": "number",
			"default": ""
		}
	}
}
