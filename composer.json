{
	"name": "brainstormforce/sureforms",
	"description": "A starter plugin code",
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.5",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"phpcompatibility/php-compatibility": "^9.3",
		"wp-coding-standards/wpcs": "^2.2",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.1",
		"php-stubs/generator": "^0.8.3"
	},
	"scripts": {
		"format": "vendor/bin/phpcbf",
		"lint": "vendor/bin/phpcs",
		"test": "vendor/bin/phpunit",
		"phpstan": "vendor/bin/phpstan --memory-limit=2048M analyse",
		"gen-stubs": "vendor/bin/generate-stubs sureforms/ --out=tests/php/stubs/sf-stubs.php",
		"update-stubs": "rm -f tests/php/stubs/sf-stubs.php && bash ./bin/build-zip.sh no-clean && composer gen-stubs",
		"commit:hook:pre": [
			"cp .scripts/git-hooks/pre-commit .git/hooks/",
			"chmod +x .git/hooks/pre-commit",
			"echo 'pre-commit hook copied'"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
